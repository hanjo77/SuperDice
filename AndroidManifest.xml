<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oldschool.superdice"
    android:versionCode="1"
    android:versionName="1.0" >

	<supports-gl-texture android:name="GL_EXT_texture_compression_s3tc" />
    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/NoTitle" >
        <activity
            android:name="oldschool.superdice.MainActivity"
            android:theme="@style/NoTitle"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	    <activity android:name="oldschool.superdice.DiceAnimationActivity"
	              android:theme="@style/AppTheme" />
	    <activity android:name="oldschool.superdice.RoundScoresActivity" />
	    <activity android:name="oldschool.superdice.GameOverActivity" />
    </application>

</manifest>
