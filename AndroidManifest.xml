<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="oldschool.superdice"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

	<uses-permission android:name="android.permission.INTERNET" />

    <application
		android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/NoTitle" >
        <activity
            android:name=".MainActivity"
            android:theme="@style/NoTitle"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
	    <activity android:name=".DiceAnimationActivity"
	              android:theme="@style/AppTheme" />
	    <activity android:name=".RoundScoresActivity" />
	    <activity android:name=".GameOverActivity" />
	    <activity android:name=".SelectTargetScoreActivity"
	              android:windowSoftInputMode="stateHidden" />
	    <activity android:name=".SelectUsersActivity"
	              android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>
